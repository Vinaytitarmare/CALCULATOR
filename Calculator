#include <iostream>
using namespace std;

int main()
{
    int a, b;
    cout << endl
         << endl
         << "------CALCULATOR-------" << endl;
    int n = 0;
    while (n <= 10)
    {
        cout <<"-----------------------"<<endl<<endl<< "Enter first variable" << endl;
        cin >> a;
        cout << "Enter second variable" << endl;
        cin >> b;
        cout << "Enter operation symbol\n";
        cout << " ' + ' for addition\n ' - ' for subtraction\n ' / ' for division\n ' * ' for multiplication" << endl;
        char option;
        cin >> option;
        switch (option)
        {
        case '+':
        {
            cout << "Addition of two numbers is " << a + b << endl;
            break;
        }
        case '-':
        {
            cout << "Subtraction of two numbers is " << a -b << endl;
            break;
        }

        case '*':
        {
            cout << "Multiplication of two numbers is " << a *b << endl;
            break;
        }

        case '/':
        {
            cout << "Division of two numbers is " << a / b << endl;
            break;
        }
        default:{
            cout<<"Incorrect symbol";

        }
        }
    }

    return 0;
}
